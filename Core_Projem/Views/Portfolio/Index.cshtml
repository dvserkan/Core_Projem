@using EntityLayer.Concrate
@model List<Portfolio>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
	int sayi = 0;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
				<h4 class="card-title">Projelerim</h4>
                <div class="table-responsive">
                    <br />
                    <table class="table table-bordered table-hover" style="color:white;">
                        <thead>
                            <tr>
								<th scope="col" class="sort" data-sort="name">#</th>
								<th scope="col" class="sort" data-sort="budget">İsmi</th>
								<th scope="col" class="sort" data-sort="status">Başlık</th>
								<th scope="col" class="sort" data-sort="status">Resim</th>
								<th scope="col" class="sort" data-sort="status">Github Url</th>
								<th scope="col" class="sort text-center" data-sort="completion">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var x in Model)
                            {
								sayi++;
								<tr>
									<td>@sayi</td>
									<td>@x.Name</td>
									<td>@x.Title</td>
									<td><image style="width:40px; height:40px;" src="@x.ImageUrl"></image></td>
									<td>@x.Url</td>
									<td class="text-center">
										<a href="/Portfolio/DeletePortfolio/@x.PortfolioID" class="btn btn-outline-danger"><i class="ni ni-fat-remove"></i> Sil</a>
										<a href="/Portfolio/EditPortfolio/@x.PortfolioID" class="btn btn-outline-success" style="margin-left:25px;"><i class="ni ni-scissors"></i> Güncelle</a>
									</td>
								</tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<a href="/Portfolio/AddPortfolio" class="btn btn-outline-primary"><i class="mdi mdi-plus-box"></i> Yeni Proje Ekle</a>
