@model EntityLayer.Concrate.Portfolio
@{
    ViewData["Title"] = "EditPortfolio";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="margin-left:35%;margin-top:8%;">
    <br /><br /><br />
    <h4 style="margin-left:10px;">Proje Güncelleme Sayfası</h4>
    <form method="post" class="col-xl-5 col-md-5 table-bordered" style="height:500px;">
        <br />
        @Html.HiddenFor(x=> x.PortfolioID)
        <b>@Html.Label("İsim")</b>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        <br />
        <b>@Html.Label("Başlık")</b>
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
        <br />
        <b>@Html.Label("Resim")</b>
        @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
        <br />
        <b>@Html.Label("Github Url")</b>
        @Html.TextBoxFor(x => x.Url, new { @class = "form-control" })
        <br />
        <button class="btn btn-success">Güncelle</button>
    </form>
</div>


