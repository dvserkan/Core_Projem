@using EntityLayer.Concrate
@model List<Skill>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
	int sayi = 0;
}




<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
				<h4 class="card-title">Yeteneklerim</h4>
                <div class="table-responsive">
                    <br />
                    <table class="table table-bordered table-hover" style="color:white;">
                        <thead>
                            <tr>
								<th scope="col" class="sort" data-sort="name">#</th>
								<th scope="col" class="sort" data-sort="budget">Başlık</th>
								<th scope="col" class="sort" data-sort="status">Değer</th>
								<th scope="col" class="sort text-center" data-sort="completion">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var x in Model)
                            {

								sayi++;
								<tr>
									<td>@sayi</td>
									<td>@x.Title</td>
									<td>
										<span class="completion mr-2">@x.Value%</span>
										<div class="progress">
											<div class="progress-bar bg-success" role="progressbar" style="width: @x.Value%" aria-valuenow="@x.Value" aria-valuemin="0" aria-valuemax="100"></div>
										</div>
									</td>
									<td class="text-center">
										<a href="/Skill/DeleteSkill/@x.SkillID" class="btn btn-outline-danger"><i class="ni ni-fat-remove"></i> Sil</a>
										<a href="/Skill/EditSkill/@x.SkillID" class="btn btn-outline-success" style="margin-left:25px;"><i class="ni ni-scissors"></i> Güncelle</a>
									</td>
								</tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<a href="/Skill/AddSkill" class="btn btn-outline-primary"><i class="mdi mdi-plus-box"></i> Yeni Yetenek Ekle</a>