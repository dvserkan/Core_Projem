@using EntityLayer.Concrate
@model List<About>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	int sayi = 0;
}

<div class="card-header border-0">
	<h3 class="mb-0">Hakkımda</h3>
</div>
<!-- Light table -->
<div class="table-responsive">
	<table class="table align-items-center table-dark table-flush">
		<thead class="thead-light">
			<tr>
				<th scope="col" class="sort" data-sort="name">#</th>
				<th scope="col" class="sort" data-sort="budget">Başlık</th>
				<th scope="col" class="sort" data-sort="status">Açıklama</th>
				<th scope="col" class="sort" data-sort="status">Yaş</th>
				<th scope="col" class="sort" data-sort="status">Mail</th>
				<th scope="col" class="sort" data-sort="status">Telefon</th>
				<th scope="col" class="sort" data-sort="status">Adres</th>
				<th scope="col" class="sort" data-sort="status">Resim</th>
				<th scope="col" class="sort text-center" data-sort="completion">İşlemler</th>
			</tr>
		</thead>
		<tbody class="list">
			@foreach (var x in Model)
			{

				sayi++;
				<tr>
					<td>@sayi</td>
					<td>@x.Title</td>
					<td>@(x.Description.Length > 50 ? x.Description.Substring(0, 50) + "..." : x.Description)</td>
					<td>@x.Age</td>
					<td>@x.Mail</td>
					<td>@x.Phone</td>
					<td>@x.Address</td>
					<td><img src="@x.ImageUrl" style="width:50px; height:50px;" /></td>
					<td class="text-center">
						<a class="btn btn-outline-danger" href="/About/DeleteAbout/@x.AboutID" id="DeleteBtn"
						   onclick="return confirm('Silmek istediğinize emin misiniz?');"><i class="ni ni-fat-remove"></i> Sil</a>

					@* 	<a href="/About/DeleteAbout/@x.AboutID" class="btn btn-outline-danger"><i class="ni ni-fat-remove"></i> Sil</a> *@
						<a href="/About/EditAbout/@x.AboutID" class="btn btn-outline-success" style="margin-left:25px;"><i class="ni ni-scissors"></i> Güncelle</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
<br />
<a href="/About/AddAbout" class="btn btn-outline-primary"><i class="ni ni-fat-add"></i> Yeni Hakkımda Ekle</a>



