<div class="col-md-6" data-aos="zoom-in" data-aos-delay="100">
    <div class="bg-light my-2 p-3 pt-2">
        <form action="/Default/SendMessage/" method="POST">
            <div class="form-group my-2">
                <label for="name" class="form-label fw-bolder">İsim Soyisim</label>
                <input class="form-control" type="text" id="name" name="Name" required>
            </div>
            <div class="form-group my-2">
                <label for="email" class="form-label fw-bolder">Mail</label>
                <input class="form-control" type="email" id="email" name="Mail" required>
            </div>
            <div class="form-group my-2">
                <label for="message" class="form-label fw-bolder">Mesaj İçeriği</label>
                <textarea class="form-control" style="resize: none;" id="message" name="Content" rows="4" required></textarea>
            </div>
            <button class="btn btn-primary mt-2" type="submit">Gönder</button>
        </form>
    </div>
</div>
<script>
    $(document).ready(function () {
        // Form submit işlemi başarılı olduğunda
        $('form').submit(function (event) {
            event.preventDefault(); // Formun normal submit işlemini engelle

            // AJAX ile formu gönder
            $.ajax({
                url: '/Default/SendMessage/', // Formun gönderileceği URL
                type: 'POST', // HTTP method
                data: $(this).serialize(), // Form verilerini al
                success: function (response) {
                    // Başarılı bir şekilde form gönderildiğinde
                    // Yönlendirme işlemi yap
                    window.location.href = '/Default/Index';
                },
                error: function (xhr, status, error) {
                    // Hata durumunda gerekli işlemleri yapabilirsiniz
                }
            });
        });
    });
</script>