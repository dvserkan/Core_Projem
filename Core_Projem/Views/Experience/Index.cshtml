@using EntityLayer.Concrate
@model List<Experience>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	int sayi = 0;
}


<div class="card-header border-0">
	<h3 class="mb-0">Deneyimlerim</h3>
</div>
<!-- Light table -->
<div class="table-responsive">
	<table class="table align-items-center table-dark table-flush">
		<thead class="thead-light">
			<tr>
				<th scope="col" class="sort" data-sort="name">#</th>
				<th scope="col" class="sort" data-sort="budget">İsmi</th>
				<th scope="col" class="sort" data-sort="status">Tarihi</th>
				<th scope="col" class="sort" data-sort="status">Icon Url</th>
				<th scope="col" class="sort" data-sort="status">Açıklama</th>
				<th scope="col" class="sort" data-sort="status">Başlık</th>
				<th scope="col" class="sort text-center" data-sort="completion">İşlemler</th>
			</tr>
		</thead>
		<tbody class="list">
			@foreach (var x in Model)
			{

				sayi++;
				<tr>
					<td>@sayi</td>
					<td>@x.Name</td>
					<td>@x.Date</td>
					<td><image style="width:40px; height:40px;" src="@x.ImageUrl"></image></td>
					<td>@(x.Description.Length > 50 ? x.Description.Substring(0, 50) + "..." : x.Description)</td>
					<td>@x.Title</td>
		
					<td class="text-center">
						<a href="/Experience/DeleteExperience/@x.ExperienceID" class="btn btn-outline-danger"><i class="ni ni-fat-remove"></i> Sil</a>
						<a href="/Experience/EditExperience/@x.ExperienceID" class="btn btn-outline-success" style="margin-left:25px;"><i class="ni ni-scissors"></i> Güncelle</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
<br />
<a href="/Experience/AddExperience" class="btn btn-outline-primary"><i class="ni ni-fat-add"></i> Yeni Deneyim Ekle</a>

