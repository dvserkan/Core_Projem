@using EntityLayer.Concrate
@model List<Portfolio>

<div class="col-md-6 col-xl-4 grid-margin stretch-card">
	<div class="card">
		@foreach (var item in Model)
		{

			<div class="card-body">
				<h4 class="card-title">Son Proje & Kullanılan Teknolojiler</h4>
				<div class="owl-carousel owl-theme full-width owl-carousel-dash portfolio-carousel" id="">
					<div class="item">
						<img src="@item.ImageUrl" alt="">
					</div>
				</div>
				<div class="d-flex py-4">
					<div class="preview-list w-100">
						<div class="preview-item p-0">
							<div class="preview-thumbnail">
								<img src="@item.ImageUrl" class="rounded-circle" alt="">
							</div>
							<div class="preview-item-content d-flex flex-grow">
								<div class="flex-grow">
									<div class="d-flex d-md-block d-xl-flex justify-content-between">
										<h6 class="preview-subject">@item.Name</h6>
										<p class="text-muted text-small">@DateTime.Now.ToString("dd-MM-yyy")</p>
									</div>
									<a href="@item.Url">Github Link</a>
								</div>
							</div>
						</div>
					</div>
				</div>
				<p class="text-muted">ASP .NET CORE 8.0 </p>
				<div class="progress progress-md portfolio-progress">
					<div class="progress-bar bg-success" role="progressbar" style="width: 100%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
				</div>
				<p class="text-muted mt-3">View Components ile Partial View Kullanımı </p>
				<div class="progress progress-md portfolio-progress">
					<div class="progress-bar bg-success" role="progressbar" style="width: 100%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
				</div>
				<p class="text-muted mt-3">Entity Framework </p>
				<div class="progress progress-md portfolio-progress">
					<div class="progress-bar bg-success" role="progressbar" style="width: 100%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
				</div>
				<p class="text-muted mt-3">Linq Sorguları </p>
				<div class="progress progress-md portfolio-progress">
					<div class="progress-bar bg-success" role="progressbar" style="width: 100%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
				</div>
				<p class="text-muted mt-3">Entity Framework </p>
				<div class="progress progress-md portfolio-progress">
					<div class="progress-bar bg-success" role="progressbar" style="width: 100%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
				</div>
			</div>
		}
	</div>
</div>